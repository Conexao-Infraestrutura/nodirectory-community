{% extends "front.jinja2" %}

{% block content %}
  <div class="content">
    <div class="container-fluid col-lg-10 col-md-10 col-sm-10 col-xs-10">
      <div class="row">
        <button
          type="button"
          id="page_user_add_btn"
          class="btn btn-success btn-sm w-auto" 
          onclick="addUserInfo()"
          data-bs-toggle="modal" 
          data-bs-target="#modal_form_add">Add</button>
      </div>
      <br>
      <div class="row">
        <!-- Table with present users -->
        <table id='table_users' class="table table-bordered w-auto"></table>
        <!-- Box with users information -->
        <table id='table_userinfo' class="table table-bordered w-auto"></table>
      </div>
    </div>
    <!-- Modal confirm -->
    <div class="modal fade" id="modal_confirm" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="modal_confirm_title"></h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <p id="modal_confirm_text"></p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Back</button>
            <button id="modal_confirm_btnok"
              type="button" 
              class="btn btn-danger btn-sm" 
              data-bs-dismiss="modal" 
              data-bs-toggle="modal" 
              data-bs-target="#modal_notify">Confirm</button>
          </div>
        </div>
      </div>
    </div>
    <!-- Modal notify -->
    <div class="modal fade" id="modal_notify" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="modal_notify_title"></h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <p id="modal_notify_text"></p>
          </div>
          <div class="modal-footer">
            <button id="modal_aviso_botao_ok"
              type="button"
              class="btn btn-secondary btn-sm"
              data-bs-dismiss="modal"
              onclick="javascript:window.location.reload()"
              >Back</button>
          </div>
        </div>
      </div>
    </div>
    <!-- Modal add user -->
    <div class="modal fade" id="modal_form_add" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="modal_form_add_title"></h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="container-fluid">
            <form>
              <div class="mb-3">
                <label for="form_add_input_user_name" class="form-label"></label>
                <input 
                  type="text" 
                  class="form-control"
                  id="form_add_input_user_name"
                  aria-describedby="userName">
                <div id="form_add_input_user_name_label" class="form-text">Insert the user name</div>
              </div>
              <div class="mb-3">
                <label for="form_add_select_usergroup_name" class="form-label"></label>
                <select id="form_add_select_usergroup_name" class="form-select" aria-label="Default select example">
                </select>
                <div id="form_add_select_usergroup_name_label" class="form-text">Select primary group</div>
              </div>
              <div class="mb-3">
                <label for="form_add_select_usersupgroups_name" class="form-label"></label>
                <select id="form_add_select_usersupgroups_name" class="form-select" aria-label="Default select example" multiple>
                </select>
                <div id="form_add_select_usersupgroups_name_label" class="form-text">Select supplementary group (Ctrl for multiple)</div>
              </div>
              <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="form_add_check_user_smb" checked>
                <label class="form-check-label" for="form_add_check_user_smb">Select for Windows user</label>
              </div>
              <div class="mb-3">
                <button id="modal_form_add_btnok"
                  type="button"
                  class="btn btn-success"
                  data-bs-dismiss="modal" 
                  data-bs-toggle="modal" 
                  data-bs-target="#modal_notify">Create</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <!-- Modal user password -->    
    <div class="modal fade" id="modal_formpass" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="modal_formpass_title"></h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="container-fluid">
            <form>
              <div class="mb-3">
                <label for="formpass_input_first" class="form-label"></label>
                <input 
                  type="password" 
                  class="form-control"
                  id="formpass_input_first">
                <div id="formpass_label_first" class="form-text">Insert user password</div>
              </div>
              <div class="mb-3">
                <label for="formpass_input_second" class="form-label"></label>
                <input 
                  type="password" 
                  class="form-control"
                  id="formpass_input_second">
                <div id="formpass_label_second" class="form-text">Retype user password</div>
              </div>
              <div class="mb-3">
                <button id="modal_formpass_btnok"
                  type="button"
                  class="btn btn-success"
                  data-bs-dismiss="modal" 
                  data-bs-toggle="modal" 
                  data-bs-target="#modal_notify">Change</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

{% endblock content %}